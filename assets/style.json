{
  "version": 8,
  "name": "Mini Tokyo 3D - OpenFreeMap",
  "center": [139.7670, 35.6814],
  "zoom": 14,
  "bearing": 0,
  "pitch": 60,
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "tiles": ["https://tiles.openfreemap.org/planet/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14,
      "attribution": "&copy; OpenStreetMap contributors"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "hsl(60, 8%, 87%)"
      }
    },
    {
      "id": "background-underground",
      "type": "background",
      "paint": {
        "background-color": "hsl(60, 8%, 87%)",
        "background-opacity": 1
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 0,
        "mt3d:opacity-underground": 1
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "hsl(125, 46%, 78%)",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "hsl(205, 72%, 71%)",
        "fill-opacity": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "hsl(205, 72%, 71%)",
        "line-width": 1,
        "line-opacity": 1
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "residential", "hsl(47, 30%, 88%)",
          "commercial", "hsl(47, 30%, 88%)",
          "industrial", "hsl(47, 30%, 88%)",
          "hsl(60, 8%, 87%)"
        ],
        "fill-opacity": 0.5
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 15,
      "filter": ["!=", ["get", "underground"], "true"],
      "paint": {
        "fill-color": "hsl(47, 13%, 75%)",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "building-underground",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 15,
      "filter": ["==", ["get", "underground"], "true"],
      "paint": {
        "fill-color": "hsl(47, 13%, 75%)",
        "fill-opacity": 0
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 0,
        "mt3d:opacity-underground": 0.7
      }
    },
    {
      "id": "tunnel_motorway_link_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 12,
      "filter": [
        "all",
        ["==", ["get", "brunnel"], "tunnel"],
        ["in", ["get", "class"], ["literal", ["motorway", "trunk"]]]
      ],
      "paint": {
        "line-color": "hsl(0, 0%, 70%)",
        "line-width": 2,
        "line-opacity": 0.5
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 12,
      "filter": ["!=", ["get", "brunnel"], "tunnel"],
      "paint": {
        "line-color": "hsl(0, 0%, 100%)",
        "line-width": [
          "interpolate", ["exponential", 1.5], ["zoom"],
          12, 0.5,
          16, 2,
          20, 18
        ],
        "line-opacity": 1
      }
    },
    {
      "id": "road-detail-shape-polygon",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 15,
      "filter": ["==", ["geometry-type"], "Polygon"],
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "fill-color": "rgba(0,0,0,0)",
        "fill-opacity": 0
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 1,
        "mt3d:opacity-route": 0.1,
        "mt3d:opacity-underground": 0.0625,
        "mt3d:opacity-underground-route": 0.025
      }
    },
    {
      "id": "road-detail-shape-lines",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 15,
      "filter": ["==", ["geometry-type"], "LineString"],
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "line-color": "rgba(0,0,0,0)",
        "line-opacity": 0
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 1,
        "mt3d:opacity-route": 0.1,
        "mt3d:opacity-underground": 0.0625,
        "mt3d:opacity-underground-route": 0.025
      }
    },
    {
      "id": "3d-building",
      "type": "fill-extrusion",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 15,
      "filter": ["!=", ["get", "underground"], "true"],
      "paint": {
        "fill-extrusion-color": [
          "case",
          ["has", "render_height"],
          "hsl(47, 13%, 75%)",
          "hsl(47, 13%, 65%)"
        ],
        "fill-extrusion-height": [
          "interpolate",
          ["linear"],
          ["zoom"],
          15, 0,
          15.05, ["coalesce", ["get", "render_height"], 5]
        ],
        "fill-extrusion-base": [
          "interpolate",
          ["linear"],
          ["zoom"],
          15, 0,
          15.05, ["coalesce", ["get", "render_min_height"], 0]
        ],
        "fill-extrusion-opacity": 0.7
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 0.7,
        "mt3d:opacity-route": 0.07,
        "mt3d:opacity-underground": 0.04375,
        "mt3d:opacity-underground-route": 0.0175
      }
    },
    {
      "id": "poi",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "minzoom": 14,
      "layout": {
        "visibility": "none",
        "text-field": ["get", "name"],
        "text-size": 12
      },
      "paint": {
        "text-opacity": 1,
        "icon-opacity": 1
      },
      "metadata": {
        "mt3d:opacity-effect": true,
        "mt3d:opacity": 1,
        "mt3d:opacity-route": 0.1,
        "mt3d:opacity-underground": 0.0625,
        "mt3d:opacity-underground-route": 0.025
      }
    }
  ]
}
